<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowItemActivity">

    <Button
        android:id="@+id/return_button"
        android:layout_width="28dp"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"

        android:background="@drawable/botao_voltar"
        android:backgroundTintMode="?colorSecondary"

        app:layout_constraintBottom_toBottomOf="@+id/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/logo"
        />

    <TextView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="115dp"
        android:text="SaveMoney"

        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="?colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.095" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Produto"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="?colorSecondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="51dp"
        android:layout_marginBottom="18dp"

        android:text=""
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="?colorSecondary"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_marginBottom="18dp"
        android:text=""
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="?colorSecondary"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="18dp"
        android:text="GTIN/EAN:"

        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="?colorSecondary"
        app:layout_constraintBottom_toTopOf="@+id/productIMG"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ImageView
        android:id="@+id/productIMG"
        android:layout_width="241dp"
        android:layout_height="262dp"

        android:layout_marginTop="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/ProductCounter"
        android:layout_width="56dp"
        android:layout_height="41dp"

        android:layout_marginTop="18dp"
        android:text="0"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="?colorSecondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productIMG" />

    <Button
        android:id="@+id/button_increase"
        android:layout_width="85dp"

        android:layout_height="61dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"

        android:text="+"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="?colorTertiary"
        app:cornerRadius="10dp"
        app:layout_constraintStart_toEndOf="@+id/ProductCounter"
        app:layout_constraintTop_toBottomOf="@+id/productIMG" />

    <Button
        android:id="@+id/button_decrease"
        android:layout_width="85dp"

        android:layout_height="61dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"

        android:text="-"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="?colorTertiary"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toStartOf="@+id/ProductCounter"
        app:layout_constraintTop_toBottomOf="@+id/productIMG" />


</androidx.constraintlayout.widget.ConstraintLayout>